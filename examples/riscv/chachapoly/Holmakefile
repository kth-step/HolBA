chachapoly:
	riscv64-unknown-linux-gnu-gcc -std=gnu99 -Wall -fno-builtin -fno-stack-protector -march=rv64g -O1 -o chachapoly chachapoly.c poly1305.c chacha.c

chachapoly.da:
	riscv64-unknown-linux-gnu-objdump -d chachapoly > chachapoly.da

